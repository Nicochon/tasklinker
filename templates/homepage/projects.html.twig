{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
     <main>
        <header>
           <div id="current-user"></div>
           <div id="title-page">
              <h1>Projets</h1>
           </div>
        </header>
        <div id="content">
           <div id="projects-container">
              {% for project in projects %}
                 <article class="card-project">
                    <a href="{{ path('show_project', {id: project.id})}}">
                       <h2>{{project.name}}</h2>
                    </a>
                    <div class="card-project-icons">
                       <a href="{{ path('update_project', {id: project.id})}}"><i class="fa-solid fa-pen"></i></a>
                       <a href="{{ path('delete_project', {id: project.id})}}"><i class="fa-solid fa-trash"></i></a>
                    </div>
                 </article>
              {% endfor %}
              <article class="card-project">
                 <a href="{{ path('add_project')}}">
                    <i class="fa-solid fa-circle-plus add-project-icon"></i>
                    <h2>Ajouter un projet</h2>
                 </a>
              </article>
           </div>
        </div>
     </main>
{% endblock %}
