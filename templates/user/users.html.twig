{% extends 'base.html.twig' %}
{% block title %}Users{% endblock %}

{% block body %}
    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <h1>Équipe</h1>
            </div>
        </header>
        <div id="content">
            <table id="team-container">
                <thead>
                    <tr>
                        <th>Prénom, Nom</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                <div class="employee-infos">
                                    <div class="employee-avatar">
                                        {{ user.getInitials() }}
                                    </div>
                                    <div class="employee-coords">
                                        <strong>{{user.firstName}} {{user.lastName}}</strong>
                                        <span>{{user.mail}}</span>
                                    </div>
                                </div>
                            </td>
                            <td>{{user.contract}}</td>
                            <td>
                                <a class="button button-edit-team" href="{{ path('update_user', {id: user.id}) }}">
                                    Éditer
                                </a>
                                <a class="delete-team" href="{{ path('delete_user', {id: user.id}) }}">
                                    Supprimer
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}